<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_cinema_alert_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"

        app:hintTextColor="@color/color_secondary"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:layout_marginStart="@dimen/spacing_huge_32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/spacing_huge_32"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:id="@+id/et_cinema_alert_name"
            style="@style/Cinema.EditText.Enable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Название"
            android:imeOptions="actionNext"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_cinema_alert_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"

        app:hintTextColor="@color/color_secondary"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:layout_marginStart="@dimen/spacing_huge_32"
        app:layout_constraintTop_toBottomOf="@id/til_cinema_alert_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="@dimen/spacing_huge_32"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:id="@+id/et_cinema_alert_url"
            style="@style/Cinema.EditText.Enable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="cinema-url"
            android:imeOptions="actionNext"
            android:inputType="textUri" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_cinema_alert_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"

        app:hintTextColor="@color/color_secondary"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:layout_marginStart="@dimen/spacing_huge_32"
        app:layout_constraintTop_toBottomOf="@id/til_cinema_alert_url"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="@dimen/spacing_huge_32"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:id="@+id/et_cinema_alert_email"
            style="@style/Cinema.EditText.Enable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>