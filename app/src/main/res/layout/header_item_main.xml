<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header_film_title"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:background="@color/color_primary"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/header_film_image"
        android:layout_width="300dp"
        android:layout_height="140dp"
        app:cardBackgroundColor="@color/color_primary"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp">

        <ImageView
            android:id="@+id/header_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_turquoise" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/header_film_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/header_film_image"
        android:text="Название"
        android:textStyle="bold"
        android:textColor="@color/color_text_dark"
        android:gravity="center"
        tools:ignore="NotSibling" />
    <TextView
        android:id="@+id/header_film_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/header_film_name"
        android:text="Жанр"
        android:textColor="@color/color_text_dark"
        android:gravity="center"
        tools:ignore="NotSibling" />

</RelativeLayout>